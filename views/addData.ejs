<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head %>
</head>

<body>
  <% include ./partials/header %>

  <div class="container">
    <% include ./partials/certificate %>
    <div class="center-align">
      <a class="waves-effect waves-light btn-large"><i class="material-icons right">person_add</i>Add Another Certificate</a>
      <br><br>
    </div>
  </div>


  <% include ./partials/footer %>
  <script>
    $(document).ready(function () {
      $('.datepicker').datepicker();
    });
    var i = 0;
    $("#addSub").on('click', function () {
      var data = "<tr><td><input placeholder='Enter Subject' id='subjects" + i + "'type='text' name=subjects[] class='validate'></td><td><input placeholder='Enter Marks' id='marks" + i + "' type='text' name=marks[] class='validate'></td></tr>";
      $('table').append(data);
      i++;
      if (i == 10) {
        $('#addSub').attr('disabled', true);
      }
    });
  </script>
</body>

</html>